<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTask"
    android:orientation="vertical"
    android:background="#eef0f0">


    <TextView
        android:id="@+id/selected_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="90px"
        android:gravity="center"
        android:text="14 ноября"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="10dp"/>



    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Чем вы будете заниматься?"
            android:fontFamily="@font/roboto"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Оцените время для выполнения:"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etTime"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:ems="10"
                android:textSize="20dp"
                android:inputType="number" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:layout_marginRight="10dp"
                android:text="часов"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginRight="10dp"
            android:text="Оцените важность:"
            android:textSize="20sp" />


        <SeekBar
            android:id="@+id/rating2"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_marginRight="9.5dp"
            android:layout_height="35dp"
            android:background="@drawable/gradient" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="171dp"
            android:layout_height="52dp"
            android:layout_below="@+id/rating"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:fontFamily="@font/roboto"
            android:onClick="onClick"
            android:text="Далее"
            android:textSize="15dp"
            android:translationZ="4dp" />

    </LinearLayout>


</LinearLayout>